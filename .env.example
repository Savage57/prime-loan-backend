# Prime Finance V2 Environment Configuration

# Database
MONGODB_URI=mongodb://localhost:27017/prime-finance
REDIS_URL=redis://localhost:6379

# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Features
FEATURE_LEDGER=true
FEATURE_AUTO_APPROVAL=true
FEATURE_OCR=true

# Polling Configuration
POLL_INTERVAL_MS=30000
POLL_BATCH_SIZE=100
REFUND_TIMEOUT_MS=86400000

# Loan Configuration
LOAN_AUTO_APPROVAL_MAX_KOBO=5000000
LOAN_PENALTY_PCT_PER_DAY=1
AUTO_DEBIT_RETRY_SCHEDULE="3600000,21600000,86400000"

# Provider Configuration (VFD)
CUSTOMER_KEY=your_vfd_customer_key
CUSTOMER_SECRET=your_vfd_customer_secret
BASE_URL=https://api.vfd.com
AUTH_URL=https://auth.vfd.com

# Storage (S3)
S3_BUCKET=prime-finance-images
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key

# Email Configuration
EMAIL_USERNAME=your_email@domain.com
EMAIL_PASSWORD=your_email_password
EMAIL_HOST=smtp.mailgun.org
EMAIL_PORT_NUMBER=465

# Security
CRYPTOJS_KEY=your_encryption_key
ACCESS_TOKEN_SECRET=your_jwt_access_secret
REFRESH_TOKEN_SECRET=your_jwt_refresh_secret

# Database Configuration
DB_URL=mongodb://localhost:27017/prime-finance
DATABASE_NAME=prime-finance
DB_MIN_POOL_SIZE=5
DB_MAX_POOL_SIZE=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_DIRECTORY=./logs